<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru" />


            <LinearLayout
                android:paddingRight="30dp"
                android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">


                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安其拉"
                    android:textColor="@color/txt_33"
                    android:textSize="13sp" />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15110021123"
                    android:textColor="@color/txt_33"
                    android:textSize="13sp" />

            </LinearLayout>

                <TextView
                    android:paddingBottom="5dp"
                    android:textColor="@color/txt_33"
                    android:textSize="13sp"
                    android:text="详细地址：河南省郑州市金水区商都路通泰路商都世贸中心D座2202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="43dp">
            
            <CheckBox
                android:layout_centerVertical="true"
                style="@style/DefaultAddress"
                android:textColor="@color/txt_33"
                android:textSize="12sp"
                android:text="    设为默认"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <TextView
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/confirm_bg"
                    android:textColor="@color/colorWhite"
                    android:text="编辑"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/cancel_bg"
                    android:textColor="#4D4D4D"
                    android:text="删除"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </LinearLayout>

</FrameLayout>