<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:background="@color/colorLine"
            android:layout_height="0.5dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:textColor="@color/txt_33"
                android:textColorHint="#999999"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="请输入正确的手机号"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorLine"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
           >


            <EditText
                android:paddingLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_33"
                android:textColorHint="#999999"
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:layout_marginRight="12dp"
                android:background="@drawable/get_verification_code_bg"
                android:gravity="center"
                android:id="@+id/tv_get_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="点击获取"
                android:textColor="@color/colorTheme"
                android:textSize="13sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorLine"
            android:layout_height="0.5dp"/>



        <LinearLayout
            android:layout_marginTop="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/cancel_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:id="@+id/txt_cancel"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/confirm_bg"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:text="确定"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="43dp" />
        </LinearLayout>



</LinearLayout>
</LinearLayout>